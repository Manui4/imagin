<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="description" content="">
        <meta name="author" content="">

        <title>{% block title %}{% endblock %} >> Manuia</title>


        {% block stylesheets %}
            {% stylesheets output="css/compiled/main.css" filter="cssrewrite"
                '@ManManuiaBundle/Resources/public/css/*'
                '@ManManuiaBundle/Resources/public/css/vendor/*'
             %}
                <link rel="stylesheet" type="text/css" href="{{ asset_url }}">
            {% endstylesheets %}
            <style>
                    body {
                            padding-top: 50px;
                    }
                    .sidebar{
                            margin-top: 50px;
                    }
            </style>
        {% endblock %}
    </head>
    <body>

        {% for flashMessage in app.session.flashbag.get('notice') %}
        <div class="flash-message">
            <em>Notice</em>: {{ flashMessage }}
        </div>
        {% endfor %}


        {% block body %}
        <div class="menu-header">
            {% block menu_header %}
            <div class="navbar navbar-inverse navbar-fixed-top">
                <div class="container">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a class="navbar-brand" href="{{ path('_demo') }}">Blog</a>
                    </div>
                    <div class="collapse navbar-collapse navbar-ex1-collapse navbar-right">
                        <ul class="nav navbar-nav">
                        {% block content_header_more %}
                            <li><a href="{{ path('_demo') }}">Demo Home</a></li>
                        {% endblock %}
                        </ul>
                    </div>
                </div>
            </div>
            {% endblock %}
        </div>

        <div class="content container">
            {% block content %}{% endblock %}
        </div>
        {% endblock %}

        {% block javascripts %}
            {% javascripts '@ManManuiaBundle/Resources/public/js/*' %}
                <script src="{{ asset_url }}"></script>
            {% endjavascripts %}
        {% endblock %}
    </body>
</html>
