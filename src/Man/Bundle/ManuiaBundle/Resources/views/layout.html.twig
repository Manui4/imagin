<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="Content-Type" content="text/html; charset={{ _charset }}"/>
{#         <meta name="viewport" content="width=device-width, initial-scale=1.0">#}
        <meta name="description" content="">
        <meta name="author" content="">

        <title>{% block title %}{% endblock %} >> Manuia</title>


        {% block stylesheets %}
            {% stylesheets '@ManManuiaBundle/Resources/public/css/*' %}
{#              <link rel="stylesheet" type="text/css" href="{{ asset_url }}">#}
            {% endstylesheets %}
            <link rel="stylesheet" type="text/css" href="{{ asset("/bundles/manmanuia/css/style.css") }}">
            <link href='http://fonts.googleapis.com/css?family=PT+Sans:400,400italic|Kreon' rel='stylesheet' type='text/css'>
        {% endblock %}
    </head>
    <body>
        {% for flashMessage in app.session.flashbag.get('notice') %}
        <div class="flash-message">
            <em>Notice</em>: {{ flashMessage }}
        </div>
        {% endfor %}


        {% block body %}
        <header class="l-header">
            <div class="m-hide">
	            <a class="header-logo" href="{{ path('man_manuia_homepage') }}">
	                <img src="/bundles/manmanuia/images/logo_s-orange.png" alt="Logo">
	            </a>
            </div>
            <div class="s-hide-only">
	            <a class="header-logo" href="{{ path('man_manuia_homepage') }}">
	                <img src="/bundles/manmanuia/images/logo_ml-orange.png" alt="Logo">
	            </a>
            </div>

            {% block menu_header %}
            <div class="header-toggle m-hide">
               <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".header-menu">
                   <span class="icon icon-bar"></span>
               </button>
            </div>
            <div class="header-menu s-hide-only" role="navigation">
                {% block content_header_more %}
                    <nav class="menu-item"><a href="{{ path('man_manuia_homepage') }}">Demo Home</a></nav>
                {% endblock %}
            </div>
            {% endblock %}
            <div class="clearfix"></div>
        </header>

        <div class="l-content">
            {% block content %}{% endblock %}
        </div>
        {% endblock %} <!-- block body -->

        {% block javascripts %}
            {% javascripts
                '@ManManuiaBundle/Resources/public/js/*'
                '@ManManuiaBundle/Resources/public/js/vendor/jquery-1.10.2.min.js'
             %}
                <script src="{{ asset_url }}"></script>
            {% endjavascripts %}
{#             <script type="text/javascript" src="{{ asset("/bundles/manmanuia/js/vendor/jquery-1.10.2.min.js") }}"></script>#}

        {% endblock %}
    </body>
</html>



