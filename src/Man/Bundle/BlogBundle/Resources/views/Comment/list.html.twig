<div class="zone-comments">
    <h2>Commentaires</h2>
    {% for flashMessage in app.session.flashbag.get('comments') %}
        <div class="row">
            <div class="col-s-12">
                <div class="flash-message">
                    <em>Comments</em>: {{ flashMessage }}
                </div>
            </div>
        </div>
        {% endfor %}

    {% for comment in comments if comment.published %}
    <div class="row">
        <hr />
        <a name="comment-{{ comment.id }}"></a>
        <div class="col-s-3">
            <img src="http://www.gravatar.com/avatar/975432571e556b7b0967d5d2ef827e2e?s=50&amp;d=mm" class="avatar" alt="">
{#             <img class="avatar" />#}
        </div>
        <div class="col-s-9">
            <h3 class="username"><a href="{{ comment.website }}">{{ comment.username }}</a></h3>
        </div>
        <div class="col-s-12">
            {{ comment.content }}
        </div>
    </div>
    {% endfor %}
</div>