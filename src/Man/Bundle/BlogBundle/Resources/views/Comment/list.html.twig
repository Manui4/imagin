<div class="zone-comments">
    {% for flashMessage in app.session.flashbag.get('comments') %}
        <div class="row">
            <div class="col-s-12">
                <div class="flash-message">
                    <em>Comments</em>: {{ flashMessage }}
                </div>
            </div>
        </div>
    {% endfor %}
	<div class="list-comments">
	    {% for comment in comments if comment.published %}
	    <div class="comment">
		    <div class="row">
		        <a name="comment-{{ comment.id }}"></a>
		        <div class="col-s-2">
		            <img src="http://www.gravatar.com/avatar/975432571e556b7b0967d5d2ef827e2e?s=72&amp;d=mm" class="avatar" alt="">
		        </div>
		        <div class="col-s-10">
		            <h3 class="username"><a href="{{ comment.website }}">{{ comment.username }}</a></h3>
		        </div>
{# 		    </div>#}
{# 		    <div class="row">#}
		        <div class="col-s-12">
		            {{ comment.content }}
		        </div>
		    </div>
	    </div>
	    {% endfor %}
    </div>
</div>