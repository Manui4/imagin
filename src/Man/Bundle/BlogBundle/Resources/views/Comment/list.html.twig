
{% for flashMessage in app.session.flashbag.get('comments') %}
    <div class="row">
       <div class="col-s-12">
           <div class="flash-message">
               <em>Comments</em>: {{ flashMessage }}
           </div>
       </div>
    </div>
    {% endfor %}
<div class="comments">
    {% for comment in comments if comment.published %}
    <div class="comment">
        <div class="row">
            <div class="col-s-1">
                <div class="comment-id">
                    #{{ comment.id }}
                </div>
            </div>
            <div class="col-s-9">
                <div class="comment-author">
                    <a href="{{ comment.website }}">{{ comment.username }}</a>
                </div>
            </div>
            <div class="col-s-2">
                <div class="comment-avatar">
                    <img src="http://www.gravatar.com/avatar/975432571e556b7b0967d5d2ef827e2e?s=72&amp;d=mm" alt="">
                </div>
            </div>
            <div class="col-s-12">
                <div class="comment-content">
                    {{ comment.content }}
                </div>
            </div>
        </div>
    </div>
    {% endfor %}
</div>
