
{% for flashMessage in app.session.flashbag.get('comments') %}
    <div class="row">
       <div class="col-s-12">
           <div class="flash-message">
               <em>Comments</em>: {{ flashMessage }}
           </div>
       </div>
    </div>
    {% endfor %}
<div class="comments">
    {% for comment in comments if comment.published %}
    <div class="comment">
        <div class="row">
            <div class="col-s-2">
                <div class="comment-avatar">
                    <img src="{{ comment.email | gravatar }}" alt="">
                </div>
                <div class="comment-id">
                    #{{ comment.id }}
                </div>
            </div>
            <div class="col-s-10">
                <div class="comment-author">
                    <a href="{{ comment.website }}">{{ comment.username }}</a>
                    {{ comment.createdAt | time_ago }}
                </div>
            </div>
            <div class="col-s-12">
                <div class="comment-content">
                    {{ comment.content }}
                </div>
            </div>
        </div>
    </div>
    {% endfor %}
</div>
