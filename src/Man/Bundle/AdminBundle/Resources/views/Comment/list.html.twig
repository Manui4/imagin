{% extends 'ManAdminBundle::layout.html.twig' %}

{% block title %}{{ 'Comments'|trans }}{% endblock %}

{% block content %}
<section class="section">
    <div class="l-container">
       <div class="row responsive-table-line">
            <h2>Comment management</h2>
			<table class="table table-striped table-bordered table-hover">
			  <thead>
			    <tr>
			      <th>Auteur</th>
			      <th>Post</th>
			      <th>Créé le</th>
			      <th>Publié</th>
			      <th>Actions</th>
			    </tr>
			  </thead>
			  <tbody>
			    {% for comment in comments %}
			    <tr>
			      <td data-title="Auteur" >{{ comment.username }}</td>
			      <td data-title="Post" >{{ comment.post.slug }}</td>
			      <td data-title="Créé le" >{{ comment.createdAt|date('d/m/Y') }}</td>
			      <td data-title="Publié" >{% if comment.published %}<span class="label label-success">Published</span>{% else %}<span class="label label-primary">Not Published</span>{% endif %}</td>
			      <td data-title="Actions" >
			        <a href="{{ url('man_admin_comment_edit', {'id': comment.id}) }}">
			          <button type="button" class="btn btn-small">
			            <span class="glyphicon glyphicon-edit">Editer</span>
			          </button>
			        </a>
			        <a href="{{ url('man_admin_comment_remove', {'id': comment.id}) }}">
			          <button type="button" class="btn btn-small">
			            <span class="glyphicon glyphicon-remove">Supprimer</span>
			          </button>
			        </a>
			      </td>
			    </tr>
			    {% endfor %}
			  </tbody>
			</table>
		</div>
	</div>
</section>


{% endblock %}
