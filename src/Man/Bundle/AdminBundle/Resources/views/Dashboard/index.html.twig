{% extends 'ManAdminBundle::layout.html.twig' %}

{% set configList = ['page.phone', 'page.email', 'blog.comment.enabled'] %}

{% block admin_content %}
    <section class="section">
        <div class="l-container">
           <div class="row">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>{{ 'Name'|trans }}</th>
                            <th>{{ 'Value'|trans }}</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for configName in configList %}
                        <tr>
                            <td>{{ configName }}</td>
                            <td>{{ config(configName) }}</td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            <div class="row">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Contenu</th>
                            <th>Nombre</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for data in contentInfo %}
                        <tr>
                            <td>{{ data.name }}</td>
                            <td>{{ data.nb }}</td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </section>

{% endblock %}
